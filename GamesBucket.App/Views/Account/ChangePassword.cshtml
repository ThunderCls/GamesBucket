@model GamesBucket.App.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
	Layout = "_EmptyLayout";
}

<!-- sign in -->
<div class="sign section--full-bg" style="background: black">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="sign__content">
					<!-- authorization form -->
					<form asp-controller="Account" asp-action="ResetPassword" class="sign__form">
						<input type="hidden" value="@Model.UserId">
						<input type="hidden" value="@Model.Token">
						<img src="/img/logo-big.png" alt="" class="header-form-logo">

						<div class="sign__group">
							<input type="password" required asp-for="NewPassword" class="sign__input" placeholder="New password">
						</div>
						<div class="sign__group">
							<input type="password" required asp-for="ConfirmPassword" class="sign__input" placeholder="Confirm password">
						</div>

						<button class="sign__btn">Send</button>
					</form>
					<!-- end authorization form -->
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end sign in -->

@section Scripts {
	<script >
     	$().ready(function () {
     		$('form').validate();
    	}); 
    </script>    
}